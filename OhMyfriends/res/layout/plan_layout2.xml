<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <TextView
         android:id="@+id/tv_plan_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dip"
         android:text="@string/name" />

    <EditText
        android:id="@+id/etx_plan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_plan_name"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="16dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

        <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_set_location"
        android:layout_marginTop="20dip"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dip"
        android:text="@string/start_time" />

   		 <EditText
        android:id="@+id/etx_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/tv_start_time"
         android:layout_marginLeft="16dip"
        android:ems="10" />
    
        <CheckBox
        android:id="@+id/checkBox_dayly_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/etx_start_time"
        android:layout_alignBottom="@+id/etx_start_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dip"
        android:text="@string/dayly_remind" />

    <TextView
        android:id="@+id/posName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_set_location"
        android:layout_alignBottom="@+id/btn_set_location"
        android:layout_alignLeft="@+id/tv_start_time"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_set_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/etx_plan_name"
        android:layout_below="@+id/etx_plan_name"
        android:layout_marginTop="16dp"
        android:text="@string/set_location" />

    <Button
        android:id="@+id/btn_select_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/checkBox_dayly_remind"
        android:layout_below="@+id/etx_start_time"
        android:layout_marginTop="51dp"
        android:text="@string/call_friends" />

    <TextView
        android:id="@+id/friendsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_select_friends"
        android:layout_alignBottom="@+id/btn_select_friends"
        android:layout_alignLeft="@+id/etx_start_time"
        android:text="TextView" />

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friendsName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="@string/finish" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/finish"
        android:layout_alignRight="@+id/btn_select_friends"
        android:text="@string/cancel" />

</RelativeLayout>
